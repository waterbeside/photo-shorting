{  
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/render/*", "src/main/*", "script/*"],
      "root/*": ["/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "typings/index.d.ts"
  ],
  "include": [
    "typings/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
